

.section{
  padding: 0 0 20px;
}
.section::before{
  content: '';
  display: block;
  width: calc(100% - 30px);
  height: 10px;
  border-top: 1rpx solid #ddd;
  box-sizing: border-box;
  margin: auto;
}
.background{
  width: 100%;
  height: 100px;
  background: lightblue;
}
.header{
  display: flex;
  box-sizing: border-box;
  padding: 0 15px 10px;
  margin: -50px auto 0;
}
.header-detail{
  flex: 1;
}
.name{
  color: #333;
  font-weight: 500;
  font-size: 22px;
  line-height: 50px;
  height: 50px;
}
.brife{
  font-size: 16px;
  color: #666;
  padding: 10px 0;
}
.cover{
  width: 120px;
  height: 120px;
  background: lightcoral;
}

.info-item{
  box-sizing: border-box;
  padding: 0 15px;
  display: flex;
  line-height: 26px;
  font-size: 16px;
}
.info-item__label{
  color: #444;
  padding-right: .5em;
}
.info-item__label::after{
  content: ':';
}
.info-item__value{
  color: #666;
}

.description__content{
  word-break: break-all;
  white-space: pre-wrap;
  font-size: 16px;
  color: #444;
  box-sizing: border-box;
  padding: 5px 15px;
}
.description__image{
  display: block;
  width: 100%;
  background: #f0f0f0;
}