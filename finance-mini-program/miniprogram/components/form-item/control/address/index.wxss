.form-control-address__picker {
  padding-bottom: 0.5px;
  display: block;
}
.form-control-address__picker-view {
  width: 100%;
  font-size: 16px;
  height: 20px;
  line-height: 20px;
  padding: 13px 0 10.5px;
  border-bottom: 0.5px solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.form-control-address__picker-view_empty {
  color: #808080;
}
.form-control-address-input {
  width: 100%;
  padding: 12px 0 7.5px;
  border-bottom: 0.5px solid #ccc;
}
.form-control-address-input-view {
  display: block;
  width: 100%;
  font-size: 16px;
}
