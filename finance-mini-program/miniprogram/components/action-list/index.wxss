.list {
  background: #fff;
  overflow: hidden;
}
.item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 15px 0;
}
.item__icon {
  width: 22px;
  height: 22px;
  margin: 0 15px;
}
.item__title {
  position: relative;
  flex: 1;
  font-size: 17px;
  line-height: 17px;
}
.item__text {
  position: relative;
  font-size: 13px;
  line-height: 13px;
  color: #999;
  text-align: right;
  max-width: 100px;
}
.item__arrow {
  width: 22px;
  height: 22px;
  margin-right: 15px;
}

.item__line {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 325px;
  border-bottom: 0.5px solid #ddd;
}
