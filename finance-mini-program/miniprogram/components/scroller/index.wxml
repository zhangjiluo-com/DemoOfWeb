<view class="scroller">
  <view
    class="scroller__refresh2"
    style="{{'transform: translate3d(0, ' + 0 + 'px, 0);'}}"
  >
    <view class="scroller__refresh-content2">1</view>
  </view>
  
  <scroll-view
    class="scroller__view"
    scroll-y="{{true}}"
    bindscroll="scroll"
    scroll-with-animation="{{true}}"
    enable-back-to-top="{{true}}"
    throttle="{{false}}"
  >
    <view class="scroller__content">
      <slot name="scroller__content" style="font-size: 30px;"/>
    </view>
  </scroll-view>
  <view class="scroller__bottom">
    <!-- <slot name="scroller__bottom"/> -->
  </view>
</view>