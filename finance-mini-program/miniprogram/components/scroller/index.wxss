.scroller {
  position: relative;
  height: 100%;
  background: #f6f6f6;
  overflow: hidden;
}
.scroller__refresh {
  position: absolute;
  z-index: 10;
  top: 0;
  left: 0;
  width: 100%;
}
.scroller__refresh-content {
  position: absolute;
  top: -150px;
  left: 0;
  z-index: 20;
  width: 100%;
  height: 150px;
  background: lightblue;
  transform: translate3d(0, 0, 0);
}
.scroller__refresh2 {
  position: absolute;
  z-index: 30;
  /* top: -100%; */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: lightblue;
  border-bottom: 50px solid rgba(0, 0, 0, 0);
  transform: translate3d(0, 0, 0);
}
.scroller__refresh-content2 {
  position: absolute;
  /* bottom: 0; */
  top: 0;
  left: 0;
  width: 100%;
  background: lightcoral;
}
.scroller__view {
  position: relative;
  z-index: 40;
  width: 100%;
  height: 100%;
}
.scroller__content {
  min-height: 100.1%;
  background: #f6f6f6;
}
