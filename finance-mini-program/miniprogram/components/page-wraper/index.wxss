.title-bar {
  position: fixed;
  z-index: 100;
  left: 0;
  width: 100%;
  height: 44px;
  background: lightblue;
}
.page {
  padding-bottom: 0;
  padding-bottom: env(safe-area-inset-bottom, 0);
}

.login {
  position: fixed;
  z-index: 1000;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.05);
  overflow: hidden;
  display: flex;
}
.login__box {
  width: 345px;
  min-height: 100px;
  background: #fff;
  margin: auto;
  padding: 10px 0;
  border-radius: 3px;
  text-align: center;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
}
.login__avatar {
  width: 100px;
  height: 100px;
  border-radius: 100px;
  overflow: hidden;
  box-shadow: 0 3px 10px rgb(100, 100, 100);
  margin: auto;
}
.login__title {
  font-size: 20px;
  color: #333;
  padding: 15px 0;
}
.login__cancel {
  width: 100px;
  height: 35px;
  line-height: 35px;
  color: #888;
  font-size: 14px;
}
.login__button {
  width: 290px;
  border: none;
  border-radius: 50px;
  font-size: 17px;
  background: linear-gradient(to right, #aaa, #666);
  color: #fff;
  text-indent: 0.2em;
  letter-spacing: 0.2em;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
}
