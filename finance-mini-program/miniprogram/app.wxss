/**app.wxss**/

page {
  background: #f6f6f6;
  line-height: 1;
}
image {
  display: block;
}
.block-button {
  width: 690rpx;
  height: 88rpx;
  padding: 0;
  border: none;
  outline: none;
  border-radius: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  text-indent: 1em;
  letter-spacing: 1em;
  background: linear-gradient(to right, #87cecb, #00a6ac);
  color: #fff;
  text-align: center;
  margin: auto;
  box-shadow: 2rpx 4rpx 10rpx rgba(0, 0, 0, 0.3);
}
button::before,
button::after {
  display: none;
}
input {
  line-height: 1;
}

.form-control {
  display: block;
  width: 100%;
  height: 76rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
}


.text-overflow-ellipsis{
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  white-space: nowrap;
}